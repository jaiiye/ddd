<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                                   "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="cn.ddd.core.security.domain" auto-import="true">
	<class name="UserAccount" table="t_sys_user">
		<id name="id">
			<generator class="native" />
		</id>
		<property column="username" name="username" />
		<property access="field" column="password" name="password" />
		<property column="locked" name="locked" />
		<property column="credentialsExpired" name="credentialsExpired" />
		<property access="field" column="salt" name="salt" />
		<set name="roles" table="t_user_role" lazy="true">
			<key column="user_id" />
			<element column="rolename" type="string" />
		</set>
		<set name="permissions" table="t_user_permissions" lazy="true">
			<key column="user_id" />
			<element column="permission" type="string" />
		</set>
	</class>
</hibernate-mapping>