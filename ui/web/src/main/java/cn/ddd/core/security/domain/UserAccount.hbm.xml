<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="cn.ddd.core.security.domain">
	<class name="UserAccount" table="t_sys_user">
		<id name="id">
			<generator class="native" />
		</id>
		<version name="version" column="version" />
		<property name="username" column="username" access="field" />
		<property name="password" column="password" />
		<property name="locked" column="locked" />
		<property name="credentialsExpired" column="credentialsExpired" />
		<property name="salt" column="salt" access="field" />
		<set name="roles" table="t_user_role">
			<key column="user_id" />
			<element type="string" column="rolename" />
		</set>
		<set name="permissions" table="t_user_permissions">
			<key column="user_id" />
			<element type="string" column="permission" />
		</set>
	</class>
</hibernate-mapping>